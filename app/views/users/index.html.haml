!!!
%html
  %head
    %meta{:charset => "UTF-8"}/
    %title 后台管理系统——用户管理
    = javascript_include_tag "jquery-1.11.1.min"
    = javascript_include_tag "bootstrap.min"
    = javascript_include_tag "jquery.dataTables.min"
    = javascript_include_tag "dataTables.bootstrap"
    = javascript_include_tag "jquery.uploadify"
    = javascript_include_tag "public_javascript"
    = javascript_include_tag "page/sys/userScript"
    = stylesheet_link_tag "bootstrap"
    = stylesheet_link_tag "dataTables.bootstrap"
    = stylesheet_link_tag "uploadify"
    = stylesheet_link_tag "common"
    = stylesheet_link_tag "main"
  %body
    = render '/page/header'
    .container.clearfix
      = render '/page/menu'
      / /sidebar
      .main-wrap
        .crumb-wrap
          .crumb-list
            %i.icon-font 
            %a{:href => "/page/index"} 首页
            %span.crumb-step >
            %span.crumb-name 用户管理
        .result-wrap
          .result-content
            %input{:name => "userIds", :type => "hidden"}/
            %table#example.table.table-bordered
              %thead
                %tr
                  %th
                    %input{:name => "allChecked", :type => "checkbox"}
                  %th ID
                  %th 用户名
                  / %th 密码
                  %th 昵称
                  / %th 头像
                  %th 学号
                  %th 姓名
                  %th 个人说明
                  %th 积分
                  %th 邮箱
                  %th admin
                  %th 上次登录
                  %th 激活 
                  %th 操作
              %tbody
        .modal.fade#userInfo{"aria-labelledby" => "myModalLabel", :role => "dialog", :style => "width:600px;margin:auto auto;"}
          %form{:name => "userForm"}
            .modal-dialog
              .modal-content
                .modal-header
                  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                    %span{"aria-hidden" => "true"} ×
                  %h4#myModalLabel.modal-title 用户信息
                .modal-body
                  .form-group
                    .tab-content
                      #baseMessage.tab-pane.active
                        .input-group
                          .span ID
                          %input.ipt{:name => "user_id",:id=>"user_id", :disabled=>"true" }/
                        .input-group
                          .span 用户名
                          %input.ipt{:name => "username",:id=>"username", :placeholder => "请填写用户名", :required => "", :type => "text"}/
                        .input-group
                          .span{:id=>"passwordSpan"} 密码
                          %input.ipt{:name => "password",:id=>"password", :placeholder => "请填写密码", :required => "", :type => "text"}/
                        .input-group
                          .span 昵称
                          %input.ipt{:name => "nickname",:id=>"nickname", :placeholder => "请填写昵称", :required => "", :type => "text"}/
                        .input-group
                          .span 学号
                          %input.ipt{:name => "student_id",:id=>"student_id", :placeholder => "请填写学号", :required => "", :type => "text"}/
                        .input-group
                          .span 姓名
                          %input.ipt{:name => "name",:id=>"name", :placeholder => "请填写姓名", :required => "", :type => "text"}/
                        .input-group
                          .span 个人说明
                          %textarea.form-control{:name => "description",:id=>"description", :rows => "2", :placeholder => "请填写个人说明",:style => "width: 467px"}
                        .input-group
                          .span 邮箱
                          %input.ipt{:name => "email",:id=>"email", :placeholder => "请填写邮箱", :required => "", :type => "text"}/
                        .input-group
                          %span 积分&nbsp;
                          %input.ipt{:name => "credits",:id=>"credits", :placeholder => "积分", :required => "", :type => "text",:style => "width: 100px"}/
                          &nbsp;
                          %label.checkbox-inline
                            %input{:type => "checkbox", :name => "admin",:id=>"admin"}/
                            管理员
                          %label.checkbox-inline
                            %input{:type => "checkbox", :name => "activation",:id=>"activation"}/
                            激活
                  %span{:name=>"changeTips"}
                .modal-footer
                  %button.btn.btn-default{"data-dismiss" => "modal", :type => "reset"} 取消
                  %button.btn.btn-primary{:id => "changeUserInfo"} 提交
:css
  .ipt {
    border: 1px solid #d3d3d3;
    padding: 6px 12px;
    height: 34px;
    width: 290px;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s
  }
